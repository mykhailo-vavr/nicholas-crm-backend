{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".dto.ts", ".query.ts", ".response.ts"],
          "controllerFileNameSuffix": "controller.ts"
        }
      }
    ],
    "deleteOutDir": true
  }
}
